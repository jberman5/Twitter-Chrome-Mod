{
  "manifest_version": 2,

  "name": "Twitter Mod",
  "description": "This extension allows the user
            to extra Twitter profile information",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://www.twitter.com/*",
                  "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://*.twitter.com/",
    "https://*.herokuapp.com/"
  ],

  "background": {

    "page" : "background.html"
  }


}
